                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Pieza</label>
                        <div class="col-sm-10">
                            <select data-live-search="true"  id="piezasExistentes" >

                            </select><br>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Cantidad:</label>
                        <div class="col-sm-10">
                            <input type="number" id="cantidadPiezas" value="1" min="1">
                        </div>
                    </div>                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Envio:</label>
                        <div class="col-sm-10">
                            <input id="costoEnvio" name="" type="number" onchange="precioTotal()" value="0" min="0" step="0.01" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Extra:</label>
                        <div class="col-sm-10">
                            <input id="extra" name="" type="number" onchange="precioTotal()" value="0" min="0" step="0.01">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Descuento:</label>
                        <div class="col-sm-10">
                            <input id="descuento" name="" type="number" onchange="precioTotal()" value="0" min="0" step="0.01">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Precio Final:</label>
                        <div class="col-sm-10">
                            <span id="precioFinal"></span>
                        </div>
                    </div>

                    <h6>Opciones de pagos</h6>
                    <input type="radio" name="tipo" value="1"> Credito
                    &nbsp;
                    <input type="radio" name="tipo" value="0" checked> Debito
                    <h6>Datos del Cliente</h6>
                    <div class="box" style="display:none">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" >Cuotas:</label>
                            <div class="col-sm-10">
                                <input name="" type="number" id="cuotas" min="0" value="0">
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" >Cliente:</label>
                        <div class="col-sm-10">
                            <input name="" type="text" id="cliente" value="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" >Celular:</label>
                        <div class="col-sm-10">
                            <input  name="" type="text" id="celular" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email:</label>
                        <div class="col-sm-10">
                            <input  name="" type="text" id="email"  required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Direccion:</label>
                        <div class="col-sm-10">
                            <input id="direccion" name="" type="text"  id="direccion" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Provincia:</label>
                        <div class="col-sm-10">
                            <input  name="" type="text"  id="provincia" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Distrito:</label>
                        <div class="col-sm-10">
                            <input  name="" type="text"  id="distrito" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12 text-center">
                            <button type="submit" class="btn-get-started2" id="realizar-venta" style="background-color:white;">Guardar</button>
                        </div>
                    </div>
